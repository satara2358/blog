---
import menuItem from '../Data/ItemsData';
import MenuItem from '../components/MenuItem.astro';
import MenuView from '../components/MenuView.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<MenuItem>
			{
				menuItem.map(item => <MenuView {...item}/>)
			}
		</MenuItem>
		<slot />
	</body>
</html>
<style is:global>
	html{
		font-family: system-ui, sans-serif;
		background-color: #f6f6f6;
	}
	body{
		margin: 0;
	}
	code {
		font-family: Menlo, Monaco, 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
	}
</style>
