---
import type { itemsMenu } from '../types/types'

interface Props extends itemsMenu{
}
const {title, url} = Astro.props;
---
<ul>
  <li>
    <a href={url}>{title}</a>
  </li>
</ul>
<style>
  li{
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li a {
    font-size: 20px;
    display: block;
    padding: 30px 40 px;
    color: rgb(14, 13, 13);
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    display: flex;
    align-items: center;
  }
  li a :hover{
    color: orange;
    transform: scale(1.15);
  }

  img {
    width: 32px;
  }

</style>